@model MVCBasico12D.Models.MateriaProfesor

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<h3>Esta seguro que desea eliminar?</h3>
<div>
    <h4>Materia por profesor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProfesorId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProfesorId)
        </dd>
        <dt class="col-sm-2">
            Profesor
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Profesor.Nombre @ViewBag.Profesor.Apellido
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MateriaId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MateriaId)
        </dd>
        <dt class="col-sm-2">
            Materia
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Materia.Nombre @ViewBag.Materia.Anio
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la lista</a>
    </form>
</div>
