@model MVCBasico12D.Models.Materia

@{
    ViewData["Title"] = "Detalles";
}

<h1>Detalles</h1>

<div>
    <h4>Materia</h4>
    <hr />
    @*Formulario con Action RemoverProfesor del Model Materia*@
    @using (Html.BeginForm("RemoverProfesor", "Materias", FormMethod.Post))
    {
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Anio)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Anio)
            </dd>

            @*Creo una Select List dinamica con los profesores correspondientes a la materia*@
        <dd class="col-sm-10">
            <select id="profesores">
                @if (ViewBag.Profesores != null)
                {
                    foreach (Profesor p in ViewBag.Profesores)
                    {
                        <option value=@p.Id>@p.Nombre @p.Apellido</option>
                    }
                }
            </select>
            <input type="submit" id="btnRemover" value="Remover profesor" onclick="agarrarProfesor()" />
            <input asp-for="Nombre" id="profesorId" type="hidden" class="form-control" />
            <input asp-for="Id" id="materias" type="hidden" class="form-control" value="@Model.Id" />
        </dd>
        </dl>
    }
    </div>
<script src="~/js/site.js"></script>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">Volver a la lista</a>
</div>
